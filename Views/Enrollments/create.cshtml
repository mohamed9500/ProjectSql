@model GymManagementSystem.Models.Enrollment

@{
    ViewData["Title"] = "New Enrollment";
}

<h2>Enroll Member in Class</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="MemberID">Member</label>
        <select asp-for="MemberID" class="form-control" asp-items="ViewBag.Members">
            <option value="">-- Select Member --</option>
        </select>
        <span asp-validation-for="MemberID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ClassID">Class</label>
        <select asp-for="ClassID" class="form-control" asp-items="ViewBag.Classes">
            <option value="">-- Select Class --</option>
        </select>
        <span asp-validation-for="ClassID" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-success">Enroll</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
