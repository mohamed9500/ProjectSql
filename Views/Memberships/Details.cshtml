@model GymManagementSystem.Models.Membership

@{
    ViewData["Title"] = "Membership Plan Details";
}

<h2>Membership Plan Details</h2>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5>Plan Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Plan ID</dt>
                    <dd class="col-sm-8">@Model.MembershipID</dd>

                    <dt class="col-sm-4">Plan Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Price</dt>
                    <dd class="col-sm-8">$@Model.Price.ToString("F2")</dd>

                    <dt class="col-sm-4">Duration</dt>
                    <dd class="col-sm-8">@Model.DurationMonths month(s)</dd>

                    <dt class="col-sm-4">Members Count</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@(Model.Members?.Count ?? 0)</span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5>Members with This Plan</h5>
            </div>
            <div class="card-body">
                @if (Model.Members != null && Model.Members.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Member ID</th>
                                <th>Name</th>
                                <th>Email</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in Model.Members)
                            {
                                <tr>
                                    <td>@member.MemberID</td>
                                    <td>@member.First_name @member.Last_name</td>
                                    <td>@member.Email</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No members are currently using this plan.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MembershipID" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Edit
    </a>
    <a asp-action="Delete" asp-route-id="@Model.MembershipID" class="btn btn-danger">
        <i class="bi bi-trash"></i> Delete
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

