@model IEnumerable<GymManagementSystem.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollments";
}

<h2>Class Enrollments</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">New Enrollment</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Member</th>
            <th>Class</th>
            <th>Enrolled On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EnrollmentID</td>
                <td>@item.Member.First_name @item.Member.Last_name</td>
                <td>@item.Class.ClassName</td>
                <td>@item.EnrolledOn.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.EnrollmentID" class="btn btn-sm btn-danger">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
