@model GymManagementSystem.Models.Member

@{
    ViewData["Title"] = "Delete Member";
}

<h2>Delete Member</h2>

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this member?</h4>
    <p>This action cannot be undone!</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5>Member Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Member ID</dt>
            <dd class="col-sm-9">@Model.MemberID</dd>

            <dt class="col-sm-3">First Name</dt>
            <dd class="col-sm-9">@Model.First_name</dd>

            <dt class="col-sm-3">Last Name</dt>
            <dd class="col-sm-9">@Model.Last_name</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Join Date</dt>
            <dd class="col-sm-9">@Model.JoinDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Membership Plan</dt>
            <dd class="col-sm-9">
                @if (Model.Membership != null)
                {
                    <span class="badge bg-info">@Model.Membership.Name</span>
                }
                else
                {
                    <span class="text-muted">No membership plan</span>
                }
            </dd>

            @if (Model.Enrollments != null && Model.Enrollments.Any())
            {
                <dt class="col-sm-3">Enrollments</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-warning text-dark">@Model.Enrollments.Count class(es)</span>
                </dd>
            }
        </dl>

        @if (Model.Enrollments != null && Model.Enrollments.Any())
        {
            <div class="alert alert-warning">
                <strong>Warning:</strong> This member is enrolled in @Model.Enrollments.Count class(es). 
                These enrollments will be deleted when you delete this member.
            </div>
        }
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="MemberID" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Confirm Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancel
    </a>
</form>
