@model GymManagementSystem.Models.Membership

@{
    ViewData["Title"] = "Delete Membership Plan";
}

<h2>Delete Membership Plan</h2>

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this membership plan?</h4>
    <p>This action cannot be undone!</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5>Plan Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Plan ID</dt>
            <dd class="col-sm-9">@Model.MembershipID</dd>

            <dt class="col-sm-3">Plan Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">$@Model.Price.ToString("F2")</dd>

            <dt class="col-sm-3">Duration</dt>
            <dd class="col-sm-9">@Model.DurationMonths month(s)</dd>

            @if (Model.Members != null && Model.Members.Any())
            {
                <dt class="col-sm-3">Members Using This Plan</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-warning text-dark">@Model.Members.Count member(s)</span>
                </dd>
            }
        </dl>

        @if (Model.Members != null && Model.Members.Any())
        {
            <div class="alert alert-warning">
                <strong>Warning:</strong> This plan is currently used by @Model.Members.Count member(s).
                You must reassign or remove these members before deleting this plan.
            </div>
        }
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="MembershipID" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Confirm Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancel
    </a>
</form>

