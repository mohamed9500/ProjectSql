@model GymManagementSystem.Models.Class

@{
    ViewData["Title"] = "Delete Class";
}

<h2>Delete Class</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this class?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Class Name</dt>
            <dd class="col-sm-9">@Model.ClassName</dd>

            <dt class="col-sm-3">Trainer</dt>
            <dd class="col-sm-9">@Model.Trainer?.First_name @Model.Trainer?.Last_name</dd>

            <dt class="col-sm-3">Schedule</dt>
            <dd class="col-sm-9">@Model.Schedule</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="ClassID" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
