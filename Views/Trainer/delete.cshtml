@model GymManagementSystem.Models.Trainer

@{
    ViewData["Title"] = "Delete Trainer";
}

<h2>Delete Trainer</h2>

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this trainer?</h4>
    <p>This action cannot be undone!</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5>Trainer Information</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Trainer ID</dt>
            <dd class="col-sm-9">@Model.TrainerID</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.First_name @Model.Last_name</dd>

            <dt class="col-sm-3">Phone</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Specialty</dt>
            <dd class="col-sm-9"><span class="badge bg-info">@Model.Specialty</span></dd>

            @if (Model.Classes != null && Model.Classes.Any())
            {
                <dt class="col-sm-3">Assigned Classes</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-warning text-dark">@Model.Classes.Count class(es)</span>
                </dd>
            }
        </dl>

        @if (Model.Classes != null && Model.Classes.Any())
        {
            <div class="alert alert-warning">
                <strong>Warning:</strong> This trainer is assigned to @Model.Classes.Count class(es).
                Deleting this trainer may affect those classes.
            </div>
        }
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="TrainerID" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Confirm Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancel
    </a>
</form>
