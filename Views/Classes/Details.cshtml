@model GymManagementSystem.Models.Class

@{
    ViewData["Title"] = "Class Details";
}

<h2>Class Details</h2>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5>Class Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Class ID</dt>
                    <dd class="col-sm-8">@Model.ClassID</dd>

                    <dt class="col-sm-4">Class Name</dt>
                    <dd class="col-sm-8">@Model.ClassName</dd>

                    <dt class="col-sm-4">Schedule</dt>
                    <dd class="col-sm-8">@Model.Schedule.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Trainer</dt>
                    <dd class="col-sm-8">
                        @if (Model.Trainer != null)
                        {
                            <span>@Model.Trainer.First_name @Model.Trainer.Last_name</span>
                            <span class="badge bg-info ms-2">@Model.Trainer.Specialty</span>
                        }
                        else
                        {
                            <span class="text-muted">No trainer assigned</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Enrolled Members</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-success">@(Model.Enrollments?.Count ?? 0)</span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5>Enrolled Members</h5>
            </div>
            <div class="card-body">
                @if (Model.Enrollments != null && Model.Enrollments.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Member ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Enrolled On</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var enrollment in Model.Enrollments)
                            {
                                <tr>
                                    <td>@enrollment.Member?.MemberID</td>
                                    <td>@enrollment.Member?.First_name @enrollment.Member?.Last_name</td>
                                    <td>@enrollment.Member?.Email</td>
                                    <td>@enrollment.EnrolledOn.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No members enrolled yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ClassID" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Edit
    </a>
    <a asp-action="Delete" asp-route-id="@Model.ClassID" class="btn btn-danger">
        <i class="bi bi-trash"></i> Delete
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

