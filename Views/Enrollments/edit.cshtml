@model GymManagementSystem.Models.Enrollment

@{
    ViewData["Title"] = "Edit Enrollment";
}

<h2>Edit Enrollment</h2>

<hr />

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="EnrollmentID" />
            <input type="hidden" asp-for="EnrolledOn" />

            <div class="form-group mb-3">
                <label asp-for="MemberID" class="form-label">Member</label>
                <select asp-for="MemberID" class="form-control" asp-items="ViewBag.Members">
                    <option value="">-- Select Member --</option>
                </select>
                <span asp-validation-for="MemberID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ClassID" class="form-label">Class</label>
                <select asp-for="ClassID" class="form-control" asp-items="ViewBag.Classes">
                    <option value="">-- Select Class --</option>
                </select>
                <span asp-validation-for="ClassID" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Enrolled On</label>
                <input type="text" class="form-control" value="@Model.EnrolledOn.ToString("dd/MM/yyyy hh:mm tt")" disabled />
                <small class="form-text text-muted">Enrollment date cannot be changed</small>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> Update Enrollment
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5>Enrollment Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Enrollment ID:</dt>
                    <dd class="col-sm-8">@Model.EnrollmentID</dd>

                    <dt class="col-sm-4">Created Date:</dt>
                    <dd class="col-sm-8">@Model.EnrolledOn.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Time:</dt>
                    <dd class="col-sm-8">@Model.EnrolledOn.ToString("hh:mm tt")</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
