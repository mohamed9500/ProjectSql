@model GymManagementSystem.Models.Membership

@{
    ViewData["Title"] = "Delete Membership Plan";
}

<h2>Delete Membership Plan</h2>

<div class="alert alert-danger">
    <h4>Are you sure you want to delete this membership plan?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Plan Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">$@Model.Price</dd>

            <dt class="col-sm-3">Duration</dt>
            <dd class="col-sm-9">@Model.DurationMonths months</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="MembershipID" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
