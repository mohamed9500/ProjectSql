@model GymManagementSystem.Models.Member

@{
    ViewData["Title"] = "Member Details";
}

<h2>Member Details</h2>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5>Personal Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Member ID</dt>
                    <dd class="col-sm-8">@Model.MemberID</dd>

                    <dt class="col-sm-4">First Name</dt>
                    <dd class="col-sm-8">@Model.First_name</dd>

                    <dt class="col-sm-4">Last Name</dt>
                    <dd class="col-sm-8">@Model.Last_name</dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@Model.Phone</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>

                    <dt class="col-sm-4">Join Date</dt>
                    <dd class="col-sm-8">@Model.JoinDate.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Membership Plan</dt>
                    <dd class="col-sm-8">
                        @if (Model.Membership != null)
                        {
                            <span class="badge bg-info">@Model.Membership.Name</span>
                        }
                        else
                        {
                            <span class="text-muted">No membership plan</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5>Enrolled Classes</h5>
            </div>
            <div class="card-body">
                @if (Model.Enrollments != null && Model.Enrollments.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Class Name</th>
                                <th>Trainer</th>
                                <th>Schedule</th>
                                <th>Enrolled On</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var enrollment in Model.Enrollments)
                            {
                                <tr>
                                    <td>@enrollment.Class?.ClassName</td>
                                    <td>@enrollment.Class?.Trainer?.First_name @enrollment.Class?.Trainer?.Last_name</td>
                                    <td>@enrollment.Class?.Schedule.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@enrollment.EnrolledOn.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No classes enrolled yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MemberID" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Edit
    </a>
    <a asp-action="Delete" asp-route-id="@Model.MemberID" class="btn btn-danger">
        <i class="bi bi-trash"></i> Delete
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

