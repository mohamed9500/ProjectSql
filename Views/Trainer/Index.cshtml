@model IEnumerable<GymManagementSystem.Models.Trainer>

@{
    ViewData["Title"] = "Trainers List";
}

<h2>Trainers List</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Trainer
    </a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Full Name</th>
            <th>Phone</th>
            <th>Specialty</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var trainer in Model)
        {
            <tr>
                <td>@trainer.TrainerID</td>
                <td>@trainer.First_name @trainer.Last_name</td>
                <td>@trainer.Phone</td>
                <td>
                    <span class="badge bg-info">@trainer.Specialty</span>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@trainer.TrainerID" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@trainer.TrainerID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@trainer.TrainerID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <strong>No trainers found!</strong> Click "Add New Trainer" to get started.
    </div>
}
