@model IEnumerable<GymManagementSystem.Models.Class>

@{
    ViewData["Title"] = "Classes";
}

<h2>Classes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Class</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Class Name</th>
            <th>Trainer</th>
            <th>Schedule</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ClassID</td>
                <td>@item.ClassName</td>
                <td>@item.Trainer?.First_name @item.Trainer?.Last_name</td>

                <td>@item.Schedule</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ClassID" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.ClassID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.ClassID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
