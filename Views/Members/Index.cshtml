@model IEnumerable<GymManagementSystem.Models.Member>

@{
    ViewData["Title"] = "Members";
}

<h2>Members</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Member
    </a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Membership Plan</th>
            <th>Join Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var member in Model)
        {
            <tr>
                <td>@member.MemberID</td>
                <td>@member.First_name @member.Last_name</td>
                <td>@member.Email</td>
                <td>@member.Phone</td>
                <td>
                    @if (member.Membership != null)
                    {
                        <span class="badge bg-info">@member.Membership.Name</span>
                    }
                    else
                    {
                        <span class="text-muted">No plan</span>
                    }
                </td>
                <td>@member.JoinDate.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@member.MemberID" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@member.MemberID" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@member.MemberID" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <strong>No members found!</strong> Click "Add New Member" to get started.
    </div>
}
