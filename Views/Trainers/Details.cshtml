@model GymManagementSystem.Models.Trainer

@{
    ViewData["Title"] = "Trainer Details";
}

<h2>Trainer Details</h2>

<hr />

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5>Personal Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Trainer ID</dt>
                    <dd class="col-sm-8">@Model.TrainerID</dd>

                    <dt class="col-sm-4">First Name</dt>
                    <dd class="col-sm-8">@Model.First_name</dd>

                    <dt class="col-sm-4">Last Name</dt>
                    <dd class="col-sm-8">@Model.Last_name</dd>

                    <dt class="col-sm-4">Phone</dt>
                    <dd class="col-sm-8">@Model.Phone</dd>

                    <dt class="col-sm-4">Specialty</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.Specialty</span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5>Assigned Classes</h5>
            </div>
            <div class="card-body">
                @if (Model.Classes != null && Model.Classes.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Class Name</th>
                                <th>Schedule</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cls in Model.Classes)
                            {
                                <tr>
                                    <td>@cls.ClassName</td>
                                    <td>@cls.Schedule.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No classes assigned yet.</p>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.TrainerID" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Edit
    </a>
    <a asp-action="Delete" asp-route-id="@Model.TrainerID" class="btn btn-danger">
        <i class="bi bi-trash"></i> Delete
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

